{
  "manifest_version": 3,
  "name": "PostHog/Zetta Debugger",
  "version": "1.1.0",
  "description": "Debug PostHog/Zetta analytics events in real-time",
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "PostHog Debugger"
  },
  "background": {
    "service_worker": "src/background.js"
  },
  "devtools_page": "src/devtools.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/inject.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
